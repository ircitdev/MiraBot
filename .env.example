# ============================================
# MIRA BOT - Environment Configuration
# ============================================
# Скопируйте этот файл как .env и заполните значения

# --------------------------------------------
# TELEGRAM
# --------------------------------------------
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# --------------------------------------------
# ANTHROPIC (Claude API)
# --------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=1024

# --------------------------------------------
# DATABASE (SQLite)
# --------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./mira_bot.db

# --------------------------------------------
# OPENAI (Whisper для голосовых сообщений)
# --------------------------------------------
OPENAI_API_KEY=your_openai_api_key

# --------------------------------------------
# REDIS
# --------------------------------------------
# Для локальной разработки
REDIS_URL=redis://localhost:6379

# Для Docker
# REDIS_URL=redis://redis:6379

# --------------------------------------------
# ЮKASSA (Платежи)
# --------------------------------------------
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://t.me/your_bot_username

# --------------------------------------------
# ЦЕНЫ (в рублях)
# --------------------------------------------
PRICE_MONTHLY=999
PRICE_QUARTERLY=2499
PRICE_YEARLY=7999

# --------------------------------------------
# ЛИМИТЫ
# --------------------------------------------
FREE_MESSAGES_PER_DAY=10
FREE_MEMORY_DEPTH=10
PREMIUM_MEMORY_DEPTH=50

# --------------------------------------------
# РЕФЕРАЛЬНАЯ ПРОГРАММА
# --------------------------------------------
REFERRAL_BONUS_DAYS=7
REFERRAL_MILESTONE_3=30

# --------------------------------------------
# ADMIN PANEL
# --------------------------------------------
ADMIN_SECRET_KEY=your_super_secret_jwt_key_change_this
ADMIN_DEFAULT_EMAIL=admin@yourdomain.ru
ADMIN_DEFAULT_PASSWORD=change_me_immediately

# --------------------------------------------
# РИТУАЛЫ
# --------------------------------------------
RITUAL_MORNING_DEFAULT=09:00
RITUAL_EVENING_DEFAULT=21:00

# --------------------------------------------
# БЕЗОПАСНОСТЬ
# --------------------------------------------
CRISIS_HOTLINE=8-800-2000-122

# --------------------------------------------
# ЛОГИРОВАНИЕ
# --------------------------------------------
LOG_LEVEL=INFO
