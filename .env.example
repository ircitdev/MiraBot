# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_IDS=123456789,987654321

# Claude API
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Database (PostgreSQL for production, SQLite for local)
DATABASE_URL=postgresql://mirabot:changeme@localhost:5432/mira_bot
# For local development with SQLite:
# DATABASE_URL=sqlite:///./mira_bot.db

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Settings
LOG_LEVEL=INFO
FREE_MESSAGES_PER_DAY=10
PREMIUM_PRICE=299
HEALTH_CHECK_PORT=8080

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Payment (YooKassa)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Whisper API (for voice messages)
WHISPER_API_KEY=your_openai_api_key_for_whisper

# Feature Flags
ENABLE_REFERRAL_SYSTEM=true
ENABLE_MOOD_TRACKING=true
ENABLE_RITUALS=true

# Docker Compose specific
DB_NAME=mira_bot
DB_USER=mirabot
DB_PASSWORD=changeme_in_production
